@model Os.Brain.Models.Role

@{
    Layout = "~/Views/Shared/_Modules.cshtml";
}
@section CssBlock{
    .tl{width:350px}
}

@section Btn{
    <li class="list"><i></i><a asp-action="Index">列表</a></li>
    <li class="back"><i></i><a asp-action="details" asp-route-id="@Model.Id">返回</a></li>
}

<table class="tab-list">
    <tr><td class="tl">@Html.DisplayNameFor(model => model.ConcurrencyStamp)</td><td class="tr">@Html.DisplayFor(model => model.ConcurrencyStamp)</td></tr>
    <tr><td class="tl">@Html.DisplayNameFor(model => model.Name)</td><td class="tr">@Html.DisplayFor(model => model.Name)</td></tr>
    <tr><td class="tl">@Html.DisplayNameFor(model => model.NormalizedName)</td><td class="tr">@Html.DisplayFor(model => model.NormalizedName)</td></tr>
</table>
<form asp-action="Delete" asp-route-id="@Model.Id">
    <div style="text-align:right;padding:5px 10px 0 0">
        <input class="btn btn-danger btn-xs" type="submit" value=" 确认删除 " />
    </div>
</form>
